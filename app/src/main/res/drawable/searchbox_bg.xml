<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        >

        <shape android:shape="rectangle">
            <solid android:color="#BF000000"/>

            <stroke android:color="#BF000000"

                android:width="5dp"/>


        </shape>
    </item>

    <item
        android:bottom="1dp">

        <shape android:shape="rectangle">
            <solid android:color="@color/greenLight"/>

            <stroke android:color="@color/greenLight"

                android:width="5dp"/>


        </shape>
    </item>

    <item android:left="5dp"
        android:right="5dp"
        android:top="5dp"
        android:bottom="5dp">
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="@color/bgColor"
                android:endColor="@color/bgColor"
                android:angle="90"/>




        </shape>
    </item>
</layer-list>