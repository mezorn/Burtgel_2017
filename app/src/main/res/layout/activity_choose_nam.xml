            android:id="@+id/btn_nam_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_nam_5"
            android:text="5"
            android:clickable="true"
            android:layout_marginTop="@dimen/btn_paddingRight"
            android:textAlignment="center"
            android:padding="@dimen/btn_paddingRight"
            android:textSize="@dimen/text_default_size"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/btn_nam_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_nam_6"
            android:text="6"
