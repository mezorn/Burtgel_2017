<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mezorn.burtgel_2017.ChooseNamActivity"
    android:background="@drawable/dialogback"
    android:paddingLeft="26dp"
    android:paddingRight="26dp"
    android:paddingTop="@dimen/btn_paddingRight"
    >

<TextView
    android:id="@+id/choose_nam_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/dropdown_choose"
    android:textColor="@color/black"
    android:textAlignment="center"
    />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nam_list"
        android:layout_marginTop="@dimen/btn_paddingtop"
        android:paddingTop="@dimen/btn_paddingtop"
        android:paddingBottom="@dimen/btn_paddingtop"
        android:layout_below="@+id/choose_nam_header"
        android:layout_above="@+id/btn_cancel_nam_dialog">
