            android:id="@+id/btn_nam_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_nam_10"
            android:text="10"
            android:clickable="true"
            android:layout_marginTop="@dimen/btn_paddingRight"
            android:textAlignment="center"
            android:padding="@dimen/btn_paddingRight"
            android:textSize="@dimen/text_default_size"
            android:textColor="@color/white"/>
    </LinearLayout>

    </ScrollView>

<Button
    android:id="@+id/btn_cancel_nam_dialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/greebMain"
    android:text="@string/string_cancel"
    style="?android:attr/buttonBarButtonStyle"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:background="@android:color/transparent"/>



</RelativeLayout>
